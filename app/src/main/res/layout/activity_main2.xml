<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.chidambar.project.Main2Activity"
    android:background="#f970d70f">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CHOOSE HERE"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="38dp"
        android:gravity="top" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NEW SCHEDULE"
        android:id="@+id/buttonnew"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:onClick="clk" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VIEW SCHEDULE"
        android:id="@+id/buttonview"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/buttonnew"
        android:layout_alignEnd="@+id/buttonnew"
        android:onClick="clk2" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SCHEDULED HISTORY"
        android:id="@+id/buttonhistory"
        android:layout_below="@+id/buttonview"
        android:layout_marginTop="52dp"
        android:layout_alignRight="@+id/buttonview"
        android:layout_alignEnd="@+id/buttonview"
        android:onClick="clk3" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Special-Day Remainder"
        android:id="@+id/button5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:onClick="clk4" />

</RelativeLayout>

